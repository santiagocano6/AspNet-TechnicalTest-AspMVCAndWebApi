@model IEnumerable<Comunes.Models.ArticuloModels>
@{
    ViewBag.Title = "Artículos";
}

<h2>Listado artículos</h2>

<p>
    @Html.ActionLink("Crear nuevo artículo", "Create")
</p>

<table class="table">
    <tr>
        <th>
            Depósito
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalEnEstante)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalEnBodega)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DepositoModels.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalEnEstante)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalEnBodega)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ArticuloId }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.ArticuloId }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.ArticuloId })
        </td>
    </tr>
}

</table>
